<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/screen_version_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout01"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/version_linearLayout01_layout_height"
            android:layout_marginLeft="@dimen/version_linearLayout01_layout_marginLeft"
            android:layout_marginRight="@dimen/version_linearLayout01_layout_marginRight"
            android:layout_marginTop="@dimen/version_linearLayout01_layout_marginTop"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/screen_version_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/screen_version_TextView_textSize2" />

            <TextView
                android:id="@+id/screen_version_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/screen_version_TextView_marginTop1"
                android:paddingLeft="@dimen/screen_version_info_paddingLeft"
                android:text="@string/screen_version_info"
                android:textColor="@color/white"
                android:textSize="@dimen/screen_version_info_textSize" />

            <TextView
                android:id="@+id/screen_version_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/screen_version_TextView_marginTop2"
                android:text="@string/screen_version_connect"
                android:textColor="@color/white"
                android:textSize="@dimen/screen_version_TextView_textSize2" />

            <TextView
                android:id="@+id/screen_version_copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/screen_version_TextView_marginTop3"
                android:text="@string/screen_version_copyright"
                android:textColor="@color/white"
                android:textSize="@dimen/screen_version_info_textSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copyright Â© 2006-2012 aMusic Team\nAll Right Reserved "
                android:textColor="@color/white"
                android:textSize="@dimen/screen_version_TextView_textSize3" />
        </LinearLayout>

        <Button
            android:id="@+id/screen_version_check_update"
            android:layout_width="@dimen/screen_version_check_update_layout_width"
            android:layout_height="@dimen/screen_version_check_update_layout_height"
            android:layout_marginTop="@dimen/screen_version_check_update_layout_marginTop"
            android:background="@drawable/screen_version_check_update_selector"
            android:text="@string/screen_version_check_update"
            android:textSize="@dimen/screen_timing_exit_Button_textSize"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/main_Loading"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <include
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                layout="@layout/fullscreen_loading_indicator"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
