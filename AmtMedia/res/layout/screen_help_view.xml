<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/screen_version_bg"
    android:orientation="vertical" 
>

       <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/version_linearLayout01_layout_marginLeft"
            android:orientation="vertical" >
		    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/version_linearLayout01_layout_marginRight"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/screen_help_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/screen_help_view_layout_marginTop"
                android:text="@string/screen_help_title"
                android:textColor="@color/screen_help_TextView_color2" 
                android:textSize="@dimen/screen_help_TextView_textSize2"
                />
           	<TextView
              	 android:id="@+id/screen_help_view_content"
               	android:layout_width="wrap_content"
             	android:layout_height="wrap_content"
               	android:text="@string/screen_help_title"
               	android:textColor="@color/white" 
               	android:textSize="@dimen/screen_help_TextView_textSize3"
                />
           	</LinearLayout>
           </ScrollView>

</LinearLayout>