<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen_kmedia_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/screen_kmedia_songs_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="@dimen/listview_layout_margin"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:dividerHeight="1dip"
        android:listSelector="@drawable/screen_listview_selector"
        android:fadingEdge="none" />

    <LinearLayout
        android:id="@+id/empty"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:visibility="gone"
        >
        
        <include layout="@layout/screen_no_items" />
        
    </LinearLayout>

</LinearLayout>