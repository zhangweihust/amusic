<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen_search_list_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/listview_common_height"
    android:background="@drawable/screen_list_item_selector"
    android:gravity="center_vertical" 
    android:orientation="horizontal">

    <TextView
        android:id="@+id/screen_search_singer_item_above"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/search_list_item_textview_paddingLeft"
        android:textColor="@color/white"
        android:textSize="@dimen/search_list_item_textview_textsize"/>
    <TextView
        android:id="@+id/screen_search_singer_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/search_list_item_textview_paddingRight"
        android:ellipsize="end"
        android:singleLine="true"
        android:visibility="visible"
        android:textSize="@dimen/search_list_status_textview_textsize"
        />

</RelativeLayout>