<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/LinearLayout_desktop_setting_layout_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/screen_desktop_bar_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/desktop_lyric_font_large"
            android:layout_width="@dimen/LinearLayout_desktop_width_setFont_ImageView"
            android:layout_height="@dimen/LinearLayout_desktop_height_setFont_ImageView"
            android:layout_marginLeft="@dimen/LinearLayout_desktop_marginLeft_setParentLeft"
            android:background="@drawable/desktop_lyric_font_large_selector" />

        <ImageView
            android:id="@+id/desktop_lyric_font_small"
            android:layout_width="@dimen/LinearLayout_desktop_width_setFont_ImageView"
            android:layout_height="@dimen/LinearLayout_desktop_height_setFont_ImageView"
            android:layout_marginLeft="@dimen/LinearLayout_desktop_marginLeft_setFontLarge"
            android:background="@drawable/desktop_lyric_font_small_selector" />

        <ImageView
            android:id="@+id/desktop_lyric_logo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/LinearLayout_desktop_height_setFont_ImageView"
            android:layout_marginLeft="@dimen/LinearLayout_desktop_marginLeft_lyriclogo"
            android:src="@drawable/desktop_lyric_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginTop="@dimen/LinearLayout_desktop_layout_marginTop">

        <ImageView
            android:id="@+id/desktop_lyric_color1"
            android:layout_width="@dimen/LinearLayout_desktop_setColor_ImageView"
            android:layout_height="@dimen/LinearLayout_desktop_setColor_ImageView"
            android:layout_marginLeft="@dimen/LinearLayout_desktop_marginLeft_setFontSmall"
            android:src="@drawable/desktop_lyric_color1" />

        <ImageView
            android:id="@+id/desktop_lyric_color2"
            android:layout_width="@dimen/LinearLayout_desktop_setColor_ImageView"
            android:layout_height="@dimen/LinearLayout_desktop_setColor_ImageView"
            android:layout_marginLeft="@dimen/LinearLayout_desktop_marginLeft_setColor"
            android:src="@drawable/desktop_lyric_color2" />

        <ImageView
            android:id="@+id/desktop_lyric_color3"
            android:layout_width="@dimen/LinearLayout_desktop_setColor_ImageView"
            android:layout_height="@dimen/LinearLayout_desktop_setColor_ImageView"
            android:layout_marginLeft="@dimen/LinearLayout_desktop_marginLeft_setColor"
            android:src="@drawable/desktop_lyric_color3" />

        <ImageView
            android:id="@+id/desktop_lyric_color4"
            android:layout_width="@dimen/LinearLayout_desktop_setColor_ImageView"
            android:layout_height="@dimen/LinearLayout_desktop_setColor_ImageView"
            android:layout_marginLeft="@dimen/LinearLayout_desktop_marginLeft_setColor"
            android:src="@drawable/desktop_lyric_color4" />

        <ImageView
            android:id="@+id/desktop_lyric_color5"
            android:layout_width="@dimen/LinearLayout_desktop_setColor_ImageView"
            android:layout_height="@dimen/LinearLayout_desktop_setColor_ImageView"
            android:layout_marginLeft="@dimen/LinearLayout_desktop_marginLeft_setColor"
            android:src="@drawable/desktop_lyric_color5" />
    </LinearLayout>

</LinearLayout>