<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen_play_mode_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/listview_item_minHeight"
    android:background="@drawable/screen_list_item_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

 <TextView
        android:id="@+id/screen_play_mode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/listview_item_TextView_layout_marginLeft"
        android:textSize="@dimen/listview_item_title_textSize"
        android:layout_weight="1"
        android:ellipsize="middle"
        android:gravity="center_vertical"
        android:singleLine="true" />

    <CheckBox
        android:id="@+id/screen_play_mode_choose"
        style="@style/playlistEditCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/listview_item_options_layout_marginLeft"
        android:layout_marginRight="@dimen/listview_item_options_layout_marginRight"
        android:layout_weight="0" />
</LinearLayout>