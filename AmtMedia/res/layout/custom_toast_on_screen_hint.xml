<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/on_screen_hint_frame">

    <TextView
        android:id="@+id/custom_toast_on_screen_hint_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/OnScreenHintTextAppearance.Small"
        android:textColor="#ffffffff"
        android:shadowColor="#BB000000"
        android:shadowRadius="2.75"
        />
        
    <TextView
     	android:id="@+id/custom_toast_on_screen_for_keyboard"
     	android:layout_width="45dp"
        android:layout_height="60dp"
        android:textSize="@dimen/search_keyboard_bigword_textsize"
        android:text=""
        android:background="@drawable/screen_search_keyboard_big_word_bg"
        android:visibility="gone"
        android:textColor="#000000"
        android:gravity="center"
        />
     <LinearLayout
        android:id="@+id/custom_toast_on_screen_for_empty"
     	android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
     >
     <TextView 
         android:id="@+id/custom_toast_onscreen_for_empty_n"
         android:layout_height="23dp"
         android:layout_width="fill_parent"
         android:visibility="gone"
         />
     <TextView
        android:id="@+id/custom_toast_on_screen_for_empty_text0"
     	android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/popwindow_listview_head_default_paddingTop"
        android:textSize="@dimen/popwindow_item_text_size"
        android:gravity="center"
        android:textStyle="bold"
     />
     <LinearLayout
     	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
          <TextView
       		android:id="@+id/custom_toast_on_screen_for_empty_text1"
     		android:layout_width="fill_parent"
     	   	android:layout_height="wrap_content"
        	android:gravity="center"
        	android:textColor="@color/white"
            android:textSize="@dimen/popwindow_item_text_size"
            android:textStyle="bold"
     		/>
     	  <TextView
       		android:id="@+id/custom_toast_on_screen_for_empty_text2"
     		android:layout_width="fill_parent"
     	   	android:layout_height="wrap_content"
        	android:gravity="center"
        	android:textColor="@color/text_blue"
        	android:textSize="@dimen/popwindow_title_text_size"
        	android:textStyle="bold"
     		/>
        </LinearLayout>
           <TextView
       		android:id="@+id/custom_toast_on_screen_for_empty_text3"
     		android:layout_width="fill_parent"
     	   	android:layout_height="wrap_content"
        	android:gravity="center"
        	android:textColor="@color/white"
            android:textSize="@dimen/popwindow_item_text_size"
            android:textStyle="bold"
     		/>
     </LinearLayout>
</LinearLayout>


