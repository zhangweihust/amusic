<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/LinearLayout_desktop_setting_layout_width"
    android:layout_height="@dimen/LinearLayout_desktop_lev1_layout_height"
    android:background="@drawable/screen_desktop_bar_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/desktop_lyric_set"
        android:layout_width="@dimen/LinearLayout_desktop_ImageView"
        android:layout_height="@dimen/LinearLayout_desktop_ImageView"
        android:layout_marginLeft="@dimen/LinearLayout_desktop_marginLeft_parentLeft"
        android:background="@drawable/desktop_lyric_set_selector"/>
    
    <ImageView
        android:id="@+id/audio_previous"
        android:layout_width="@dimen/LinearLayout_desktop_ImageView"
        android:layout_height="@dimen/LinearLayout_desktop_ImageView"
        android:layout_marginLeft="@dimen/LinearLayout_desktop_marginLeft_setting"
        android:background="@drawable/screen_audio_player_previous_selector" />

    <ImageView
        android:id="@+id/audio_state"
        android:layout_width="@dimen/LinearLayout_desktop_ImageView"
        android:layout_height="@dimen/LinearLayout_desktop_ImageView"
        android:layout_marginLeft="@dimen/LinearLayout_desktop_marginLeft_imageView" />

    <ImageView
        android:id="@+id/audio_next"
        android:layout_width="@dimen/LinearLayout_desktop_ImageView"
        android:layout_height="@dimen/LinearLayout_desktop_ImageView"
        android:layout_marginLeft="@dimen/LinearLayout_desktop_marginLeft_imageView"
        android:background="@drawable/screen_audio_player_next_selector" />

    <ImageView
        android:id="@+id/audio_exit"
        android:layout_width="@dimen/LinearLayout_desktop_ImageView"
        android:layout_height="@dimen/LinearLayout_desktop_ImageView"
        android:layout_marginLeft="@dimen/LinearLayout_desktop_marginLeft_imageViewLeft"
        android:background="@drawable/desktop_bar_exit_selector" />

</LinearLayout>