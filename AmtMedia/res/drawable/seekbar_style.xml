<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
<shape >

            <corners android:radius="5dip" />

            <gradient
                android:angle="270"
                android:centerColor="#101010"
                android:centerY="0.75"
                android:endColor="#000000"
                android:startColor="#080808" />
        </shape></item>

    <item android:id="@android:id/secondaryProgress">
<clip >

            <shape >

                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#303030"
                    android:centerY="0.75"
                    android:endColor="#282828"
                    android:startColor="#383838" />
            </shape>
        </clip></item>

    <item android:id="@android:id/progress">
<clip >

            <shape >

                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#0072e3"
                    android:centerY="0.75"
                    android:endColor="#0066cc"
                    android:startColor="#0080ff" />
            </shape>
        </clip></item>

</layer-list>